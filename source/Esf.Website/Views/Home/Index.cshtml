@using Esf.Website.Extensions
@{
    Layout = null;
}

<html>
<head>
    <base href="/" >
    <title>Elasticsearch Fiddler</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @if (Html.IsDebug())
    {
        <link rel="stylesheet" href="/wwwroot/content/styles.css">
    }
    else
    {
        <link rel="stylesheet" href="/wwwroot/css/styles.css">
    }
</head>
<body>
    <esf-app>Loading...</esf-app>

    @if (Html.IsDebug())
    {
        <script src="/node_modules/core-js/client/shim.min.js"></script>
        <script src="/node_modules/zone.js/dist/zone.js"></script>
        <script src="/node_modules/brace/index.js"></script>
        <script src="/node_modules/reflect-metadata/Reflect.js"></script>
        <script src="/node_modules/systemjs/dist/system.src.js"></script>
        <script src="/node_modules/jquery/dist/jquery.min.js"></script>
        <script src="/systemjs.config.js"></script>
        <script>
            System
                .import('app')
                .catch(function(err) {
                    console.error(err);
                });
        </script>
    }
    else
    {
        <script src="/wwwroot/js/app.bundle.js"></script>
    }
</body>
</html>
